			rs = pstmt.executeQuery(sql);
			while (rs.next()) {
				Map<String, String> rel = new HashMap<String, String>();
				rel.put("ciid", rs.getString("ciId"));
				rel.put("kpiid", rs.getString("kpiId"));
				rel.put("autoRelation", rs.getString("autoRelation"));
