	/**
	 * 创建默认的admin用戶
	 */
	protected void createDefaultUser() {
		log.dLog("init admin");
		UserService us = new UserService();
		RoleService role = new RoleService();
		User defualt = us.getUserByLoginName("admin");
		if (defualt == null) {
			User admin = new User();
			admin.setLoginName("admin");
			admin.setUserName("admin");
			admin.setPassword("admin");
			admin.setCompany("uinv");
			admin.setDept("admin");
			StringBuffer roles = new StringBuffer();
			List<Role> allRole = role.getAllRole();
			if (allRole != null && allRole.size() > 0) {
				for (Role role2 : allRole) {
					roles.append(role2.getRoleName());
					roles.append(",");
				}
				roles.delete(roles.length() - 1, roles.length());
			}
			admin.setOwnerRoles(roles.toString());
			us.saveUser(admin);
		}
	}

