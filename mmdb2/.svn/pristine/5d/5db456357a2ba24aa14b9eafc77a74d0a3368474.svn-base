
(function(self){

	self.msg = {};

	self.msg.success = function(msg){
		this.show(msg, 'success');
	};

	self.msg.error = function(msg){
		this.show(msg, 'error');
	};

	self.msg.show = function(text, type){
		text = text || '';
		type = type || 'success';

		toastr.options = {
			closeButton: true,
			debug: false,
			newestOnTop: true,
			progressBar: false,
			positionClass: 'toast-top-right',
			preventDuplicates: false,
			onclick: null,
			showDuration: 300,
			hideDuration: 1000,
			timeOut: 5000,
			extendedTimeOut: 1000,
			showEasing: 'swing',
			hideEasing: 'linear',
			showMethod: 'fadeIn',
			hideMethod: 'fadeOut'
		};

		toastr[type](text);

	};

})(nameSpace.reg('graph'));
