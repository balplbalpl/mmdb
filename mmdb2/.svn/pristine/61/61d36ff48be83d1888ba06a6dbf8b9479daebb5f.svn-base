package com.mmdb.service.category.impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import com.mmdb.core.framework.neo4j.annotation.Transaction;
import com.mmdb.core.framework.neo4j.proxy.AbstractDomain;
import com.mmdb.model.categroy.UserCategory;
import com.mmdb.model.categroy.storage.UserCateStorage;
import com.mmdb.model.info.UserInformation;
import com.mmdb.model.info.storage.UserInfoStorage;
import com.mmdb.service.category.IUserCateService;
import com.mmdb.service.info.IUserInfoService;

/**
 * 视图分类 服务 - 实现类
 *
 * @author XIE
 */
@Component("userCateService")
public class UserCateServiceImpl extends AbstractDomain implements IUserCateService {
    @Autowired
    private UserCateStorage vCateStorage;
    @Autowired
    private UserInfoStorage vInfoStorage;
    @Autowired
    private IUserInfoService vInfoService;

    @Override
    @Transaction
    public UserCategory save(UserCategory category) throws Exception {
        return vCateStorage.save(category);
    }

    @Override
    @Transaction
    public UserCategory update(UserCategory category) throws Exception {
        return vCateStorage.update(category);
    }

    @Override
    @Transaction
    public int delete(UserCategory category, boolean bool) throws Exception {
        int i = 0;
        if (bool) {
            List<UserInformation> list = vInfoService.qureyByAdvanced(category, null, null, false);
            vInfoStorage.delete(list);
            i = list.size();
        }
        vCateStorage.delete(category);
        return i;
    }

    @Override
    @Transaction
    public void deleteAllCateAndInfo() throws Exception {
        vInfoStorage.deleteAll();
        vCateStorage.deleteAll();
    }

    @Override
    public UserCategory getById(String id) throws Exception {
        return vCateStorage.getById(id);
    }

//    @Override
//    public UserCategory getById(Long id) throws Exception {
//        return vCateStorage.getOne(id);
//    }

    @Override
    public List<UserCategory> getAll() throws Exception {
        return vCateStorage.getAll();
    }

}
