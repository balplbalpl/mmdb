<div class="login-page">
    <div class="login-content">
        <div class="login"  ng-show="online">
            <div class="login-logo">
                <img src="assets/images/logo.svg"/>
            </div>
            <div class="login-line"></div>
            <form>
                <div class="login-form">
                    <div class="login-form-input">
                        <!--<i class="fa fa-user"></i>-->
                        <!--<input type="text" placeholder="登陆名"/>-->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-user"></i></div>
                                <input type="text" class="form-control" ng-model="userName" placeholder="登录名" autofocus>
                            </div>
                        </div>
                        <!--<i class="fa fa-key"></i></i>-->
                        <!--<input type="text" placeholder="密码"/>-->
                        <div class="form-group">
                            <div class="input-group">
                                <div class="input-group-addon"><i class="fa fa-key"></i></div>
                                <input type="password" class="form-control" ng-model="password" placeholder="密码">
                            </div>
                        </div>
                    </div>
                    <div class="login-form-operation">
                        <div class="checkbox remember-me">
                            <label>
                                <input type="checkbox" ng-model="rememberMe"> <span>记住我</span>
                            </label>
                        </div>
                        <button class="btn btn-success" ng-click="login()">登陆</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="switch" ng-hide="online">
            <div class="login-logo">
                <img src="assets/images/logo.svg"/>
            </div>
            <div class="login-line"></div>
            <form>
                <div class="login-success">
                    <div class="login-user-icon" ng-click="into()">
                        <img src="assets/images/firefox.png" />
                    </div>
                    <div class="login-user-prompt">
                        <label>{{user}}</label>
                    </div>
                    <div class="login-user-op">
                        <button class="btn btn-success" ng-click="switch()">切换用户</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>